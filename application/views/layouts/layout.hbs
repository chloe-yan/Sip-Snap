<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <link rel="icon" href="/public/images/icon.png">
    <link rel='stylesheet' href='/public/css/style.css'/>
    <script defer type="text/javascript" src="/public/js/home.js"></script>
    <script defer type="text/javascript" src="/public/js/registration.js"></script>
  </head>
  <body>
    <div id="topbar"></div>
    {{> nav}}
    {{#if (emptyObject messages)}}
    {{> flash-message}}
    {{/if}}
    {{{body}}}
  </body>
  {{> footer}}

  {{#if logged}}
  <script>
    let logoutButton = document.getElementById('logout');
    if (logoutButton) {
      logoutButton.onclick = (even) => {
        fetch('/users/logout', {
          method: "POST" 
        })
        .then((data) => {
          location.replace('/');
        })
      }
    }
  </script>
  {{/if}}
</html>
