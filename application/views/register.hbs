            <input required type="checkbox" name="age">
            <label for="age">I am 13+ years of age</label>
        </div>
        <br>
        <div class="verify-checkbox">
            <input required type="checkbox" name="terms-privacy">
            <label for="terms-privacy">I accept the <a href="">TOS and Privacy Rules</a></label>
        </div>
    </div>
    <br>
    <input type="submit" value="Enter the tearoom">
</form>